@model IEnumerable<ElectronicsStoreMVC.AdminReference.Product>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron text-center bg-light text-dark mb-5" style="padding: 4rem 2rem;">
    <h1 class="display-4">Welcome to ElectroShop</h1>
    <p class="lead">The best tech, delivered to your door.</p>
    <hr class="my-4">
    <p>Browse our latest collection below.</p>
</div>

<div class="container">
    <div class="row">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height: 200px;">
                            <span class="h1">📷</span>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge badge-info p-2">@item.Category</span>
                            </div>
                            <h5 class="card-title text-truncate" title="@item.Name">@item.Name</h5>
                            <p class="card-text text-muted small">
                                @(item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0 text-primary">$@item.Price</span>
                                    @if (item.CountAvailable > 0)
                                    {
                                        <button class="btn btn-outline-primary btn-sm">Add to Cart</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Out of Stock</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No products available right now.</p>
            </div>
        }
    </div>
</div>

<style>
    /* Add a subtle hover effect to cards */
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
</style>